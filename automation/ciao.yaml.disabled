######################################################################
# Switch off all covers
######################################################################

- alias: "ciao"
  trigger:
    - platform: time
      at: '15:48:00'

  condition: []

  action:
    - service: script.speech_engine
      data_template:
        message: >- 
          {% set ora = now().strftime('%H') %}
          "Sono le {{ ora }} e tutto va bene"